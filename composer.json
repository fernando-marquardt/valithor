{
    "name": "fernando-marquardt/valithor",
    "description": "A schema validation library for PHP, inspired by Zod",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Fernando Marquardt",
            "email": "fernando.marquardt@gmail.com"
        }
    ],
    "scripts": {
        "analyse": "phpstan analyse src --level 6 --ansi",
        "test": "pest --colors=always"
    },
    "autoload": {
        "psr-4": {
            "Valithor\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "pestphp/pest": "^3.7",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^2.1"
    }
}
